{
  "name": "obsidian-pub-server",
  "version": "2.0.0",
  "description": "Server for Obsidian markdown publishing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "generate-key": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "list-publications": "node dist/cli/list.js",
    "cleanup": "node dist/cli/cleanup.js"
  },
  "keywords": [
    "obsidian",
    "markdown",
    "publish"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dompurify": "^3.0.8",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "highlight.js": "^11.9.0",
    "jsdom": "^23.2.0",
    "marked": "^11.1.1",
    "marked-gfm-heading-id": "^3.1.3",
    "nanoid": "^3.3.7",
    "winston": "^3.11.0",
    "katex": "^0.16.25"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsdom": "^21.1.6",
    "@types/katex": "^0.16.7",
    "@types/node": "^20.10.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
